<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
  <name>ANALYTICS</name>
  <creationDate>2012-07-02</creationDate>
  <author>Eduardo Reichert, Luiz Felipe Weber</author>
  <authorEmail>suporte@webgenium.com.br</authorEmail>
  <authorUrl>http://webgenium.com.br</authorUrl>
  <downloadUrl></downloadUrl>
  <copyright>Copyright © 2012 - All rights reserved.</copyright>
  <license>GNU General Public License v2.0</license>
  <version>2.0</version>
  <description>Componente Analytics Webgenium. Este componente é uma implementação do com_analytics. Possui algumas funcionalidades a mais, como gráfico animado, tradução em pt-br e mostra as estatísticas do Google Analytics do site cadastrado de uma forma mais rápida e totalmente integrada.</description>
<!--Site Main File Copy Section-->
  <files folder="frontend">
    <filename>index.html</filename>
    <filename>analytics.php</filename>
    <filename>controller.php</filename>
    <folder>views/</folder>
    <folder>models/</folder>
    <folder>controllers/</folder>
    <folder>helpers/</folder>
    <folder>assets/</folder>
  </files>
<!--Site Main Language File Copy Section-->
  <languages folder="language-frontend">
    <language tag="en-GB">en-GB/en-GB.com_analytics.ini</language>
    <language tag="pt-BR">pt-BR/pt-BR.com_analytics.ini</language>
  </languages>
<!--Install Database Section-->
  <install>
    <sql>
      <file driver="mysql" charset="utf8">install.mysql.utf8.sql</file>
    </sql>
  </install>
<!--Uninstall Database Section-->
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">uninstall.mysql.utf8.sql</file>
    </sql>
  </uninstall>
  <administration>
<!--Administration Menu Section-->
    <menu img="components/com_analytics/assets/images/icon-16-analytics.png">Analytics</menu>
<!--Administration Main File Copy Section-->
    <files folder="backend">
      <filename>index.html</filename>
      <filename>analytics.php</filename>
      <filename>controller.php</filename>
      <filename>helper.php</filename>
      <filename>config.xml</filename>
      <filename>install.mysql.utf8.sql</filename>
      <filename>uninstall.mysql.utf8.sql</filename>
      <folder>views/</folder>
      <folder>models/</folder>
      <folder>controllers/</folder>
      <folder>helpers/</folder>
      <folder>elements/</folder>
      <folder>tables/</folder>
      <folder>assets/</folder>
    </files>
<!--Admin Main Language File Copy Section-->
    <languages folder="language-backend">
      <language tag="en-GB">en-GB/en-GB.com_analytics.ini</language>
      <language tag="pt-BR">pt-BR/pt-BR.com_analytics.ini</language>
    </languages>
  </administration>
  
</install>
